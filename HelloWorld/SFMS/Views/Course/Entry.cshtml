<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Course Entry</title>
</head>
<h1>Course Create</h1>
<hr />
<form action="/Course/Entry" method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Course Name" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="Description" placeholder="Course Description" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Opening Date</label>
        <input type="date" class="form-control" name="OpeningDate" placeholder="Opening Date" required>
    </div>
   
    <div class="mb-3">
        <label class="form-label">Duration In Hour</label>
        <input type="number" class="form-control" name="DurationInHour" placeholder="Duration In Hour" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Fees (MMK)</label>
        <input type="number" class="form-control" name="Fees" placeholder="Fees (MMK)" required>
    </div>
    <div class="mb-3">
        <div class="col">
            <input type="submit" class="btn btn-success" value="Entry">
            <input type="reset" class="btn btn-secondary" value="Cancel">
        </div>
    </div>
</form>

