@model IList<CourseViewModel>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/datatables.bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/gh/rainabba/jquery-table2excel@1.1.0/dist/jquery.table2excel.min.js"></script>
@{
    ViewData["Title"] = "Course List";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Course Listing</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Course/Entry">Course</a></li>
                    <li class="breadcrumb-item active"><a href="/Course/List">List</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
@if (TempData["msg"] != null) {
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<div>   <a href="/Course/Entry" class="btn btn-info" role="button">Create</a></div>
<div class="wrapper">
    <div style="margin:0 auto;">
        <table id="CourseTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Opening Date</th>
                    <th scope="col">Duration(Hours)</th>
                    <th scope="col">Fees(MMK)</th>
                    <th scope="col">Promotion</th>
                    <th scope="col">Precetance (%)</th>
                    <th scope="col">Fixed (MMK)</th>
                    <th scope="col">Fees Ater Promotion (MMK)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr scope="row">
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.OpeningDate.ToLongDateString()</td>
                        <td>@item.DurationInHour</td>
                        <td>@item.Fees</td>
                        <td>@item.IsPromotion</td>
                        <td>@item.Percetance</td>
                        <td>@item.Fixed</td>
                        <td>@item.FeesAfterPromo</td>
                        <td><a href="/Course/Edit?Id=@item.Id" class="btn btn-success" role="button">Edit</a></td>
                        <td><a href="#" onclick="showDeleteConfirm('@item.Id');" class="btn btn-danger" role="button">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--confrim dialog-->
<div class="modal fade" id="ConfirmDialogModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Delete Record</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to delete this record?</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                <a href="#" class="btn btn-success" onclick="DeleteRecord()">Confirm</a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hiddenDeleteId" />
@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.datatables.js"></script>
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
}
<script>
    $(document).ready(function () {
        $('#CourseTable').dataTable({});
    }
         function showDeleteConfirm(itemId) {
        $("#hiddenDeleteId").val(itemId);
        $("#ConfirmDialogModal").modal('show');
    }
        function DeleteEmployee() {
        var empId = $("#hiddenDeleteId").val();
        $.ajax({
            type: "POST",
            url: "/Home/deleteEmployeeDetails",
            data: { Id: empId },
            success: function (result) {
                $("#myModal").modal("hide");
                $("#row_" + empId).remove();
            }
        });
    }
</script>