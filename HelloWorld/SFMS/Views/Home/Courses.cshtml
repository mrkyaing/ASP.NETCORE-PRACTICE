                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="rounded overflow-hidden mb-2">
                        <img class="img-fluid" src="~/img/course-1.jpg" alt="">
                        <div class="bg-secondary p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i class="fa fa-users text-primary mr-2"></i>100 Students</small>
                                <small class="m-0"><i class="far fa-clock text-primary mr-2"></i>@p.DurationInHour (hrs)</small>
                            </div>
                            <a class="h5" href="/Home/CourseDetail?courseId=@p.Id">@p.Name</a>
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-between">
                                    <h6 class="m-0"><i class="fa fa-calendar text-primary mr-2"></i>@p.OpeningDate.ToShortDateString()</h6>
                                    <h5 class="m-0">@p.Fees (MMK)</h5>
                                </div>
                            </div>
                        </div>
                    </div>
