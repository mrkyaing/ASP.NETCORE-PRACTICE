@model IList<CourseViewModel>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    @{
    ViewData["Title"] = "Batch Entry";
    }
<h1>Batch Entry</h1>
<hr />
@if (ViewBag.AlreadyExistsMsg != null)
{
    <div class="alert alert-warning">
        @ViewBag.AlreadyExistsMsg
    </div>
}
<form action="/Batch/Entry" method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Batch Name" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="Description" placeholder="Description" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Course</label>
        <select name="CourseId" class="form-control">
            @foreach (var item in Model) {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <div class="col">
            <input type="submit" class="btn btn-success" value="Entry">
            <input type="reset" class="btn btn-secondary" value="Cancel">
        </div>
    </div>
</form>

