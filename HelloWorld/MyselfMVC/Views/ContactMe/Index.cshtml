<style>
    * {
        box-sizing: border-box
    }

    header {
        background-color: gray;
        text-align: center;
        padding: 10px;
    }

    nav {
        padding: 10px;
        background-color: darkgray;
        width: 20%;
        height: 300px;
        float: left;
    }

        nav ul {
            padding: 0px;
            list-style-type: none;
        }

    article {
        padding: 10px;
        float: left;
        width: 80%;
        height: 300px;
        background-color: azure;
    }

    footer {
        padding: 10px;
        text-align: center;
        background-color: gray;
    }

    section::after {
        display: table;
    }
</style>
<html>
<head>
    <title>Myself</title>
</head>
<body>
    <header><h1> <a href="/Master/Master">MySelf</a> </h1></header>
    <section>
        <nav>
            <ul>
                <li><a href="/education/education">Education</a></li>
                <li><a href="#">Hobbies</a></li>
                <li><a href="#">Daily Activities</a></li>
                <li><a href="/ContactMe/Index">Contact Me</a></li>
            </ul>
        </nav>
        <article>
           <form action="/ContactMe/Index" method="post">
               <div>
                   <label>Name</label>
                   <input  type="text" name="Name"/> 
               </div>
                <div>
                    <label>Email</label>
                    <input type="text" name="Name" />
                </div>
                 <div>
                    <label>Message</label>
                 <textarea name="Message" cols="19" rows="10"></textarea>
               </div>
                <div>
                   <input  type="submit" value="Send Me"/> 
               </div>
           </form>        
                <h1>@ViewBag.ContactMe</h1> 
        </article>
    </section>
    <footer>Copy right by me @DateTime.Now.Year.ToString()</footer>
</body>
</html>